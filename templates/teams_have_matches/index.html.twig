{% extends 'base.html.twig' %}

{% block title %}TeamsHaveMatches index{% endblock %}

{% block body %}
    <h1>TeamsHaveMatches index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NrPoints</th>
                <th>MatchID</th>
                <th>TeamsNames</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teams_have_match in teams_have_matches %}
            <tr>
                <td>{{ teams_have_match.id }}</td>
                <td>{{ teams_have_match.nrPoints }}</td>
                <td>{{ teams_have_match.matchesHaveTeams.id }}</td>
                {% if teams_have_match.teamsHaveMatches is not null %}
                    <td>{{ teams_have_match.teamsHaveMatches.name }}</td>
                {% else %}
                    <td>PUT TEAM HERE</td>
                {% endif %}
                <td>
                    <a href="{{ path('app_teams_have_matches_show', {'id': teams_have_match.id}) }}">show</a>
                    <a href="{{ path('app_teams_have_matches_edit', {'id': teams_have_match.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_teams_have_matches_new') }}">Create new</a>
{% endblock %}
