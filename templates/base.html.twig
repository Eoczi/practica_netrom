<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Fira+Sans&display=swap" rel="stylesheet">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    {% block body %}
    <body>
        <nav class="nav">
            <label class="logo"><a href={{ path('app_homepage_index') }}>CoManager</a></label>
            <ul class="nav-links">
                <li><a href="{{ path('app_team_index') }}">Teams</a></li>
                <li><a href="{{ path('app_ranking_index') }}">Ranking</a></li>
                <li><a href="{{ path('app_summer_match_index') }}">Match dates</a></li>
                <li><a href="{{ path('app_teams_have_matches_index') }}">Matches</a></li>
            </ul>
            <div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <p style="color:white;">Email: {{ app.user.email }}</p>
                    <p><a href="{{ path('app_logout') }}" style="text-decoration: none; color:white;">Log out</a></p>
                {% else %}
                    <p><a href="{{ path('app_login') }}" style="text-decoration: none; color:white;">Log in</a></p>
                    <p><a href="{{ path('app_register') }}" style="text-decoration: none; color:white;">Register</a></p>
                {% endif %}
            </div>
        </nav>
        <div class="content-container">
            {% block content %}

            {% endblock %}
        </div>
        <footer style="padding: 30px;background-color: grey">
            <p>&copy; 2023 CoManager. All rights reserved.</p>
        </footer>
    </body>
    {% endblock %}
</html>
